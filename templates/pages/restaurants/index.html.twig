{% extends 'pages/base.html.twig' %}

{% block title %}
	Page restaurant
{% endblock %}

{% block body %}
	<h1 class="text-indigo-700 text-5xl font-bold text-center">Welcome restaurant!</h1>


	<form action="/restaurant/create" method="post">
		<input type="text" name="name" placeholder="Entrez le nom du restaurant">
		<button>Enregistrer</button>
	</form>

	<section class="flex flex-col w-screen max-w-96 bg-neutral-100 p-4 m-auto my-4">
		{% for restaurant in restaurants %}
			<p>{{restaurant.name}}</p>

		{% endfor %}

	</section>
{% endblock %}
